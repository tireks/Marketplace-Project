<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Registration_toolbar"
            android:textSize="16sp"
            android:fontFamily="@font/sf_pro_display_medium"
            />
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/name"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="113dp"
        android:hint="Имя"
        style="@style/registration_edit_text_style" />
    
    <ImageButton
        android:id="@+id/name_clear_button"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintEnd_toEndOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@id/name"
        android:src="@drawable/ic_small_close"
        style="@style/registration_clear_button_style" />

    <EditText
        android:id="@+id/surname"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/spacing_16"
        android:hint="Фамилия"
        style="@style/registration_edit_text_style" />

    <ImageButton
        android:id="@+id/surname_clear_button"
        app:layout_constraintTop_toTopOf="@id/surname"
        app:layout_constraintEnd_toEndOf="@id/surname"
        app:layout_constraintBottom_toBottomOf="@id/surname"
        android:src="@drawable/ic_small_close"
        style="@style/registration_clear_button_style" />

    <EditText
        android:id="@+id/phone"
        app:layout_constraintTop_toBottomOf="@id/surname"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/spacing_16"
        android:hint="Номер телефона"
        style="@style/registration_edit_text_style" />

    <ImageButton
        android:id="@+id/phone_clear_button"
        app:layout_constraintTop_toTopOf="@id/phone"
        app:layout_constraintEnd_toEndOf="@id/phone"
        app:layout_constraintBottom_toBottomOf="@id/phone"
        android:src="@drawable/ic_small_close"
        style="@style/registration_clear_button_style" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registration_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/spacing_16"
        android:layout_marginEnd="@dimen/spacing_16"
        android:layout_marginTop="32dp"
        android:textSize="14sp"
        android:paddingTop="18dp"
        android:paddingBottom="15dp"
        android:textColor="@color/white"
        android:text="Войти"
        android:textAllCaps="false"
        android:fontFamily="@font/sf_pro_display_medium"
        android:background="@drawable/reg_button_disactive"
        />

    <TextView
        android:id="@+id/bottom_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        android:text="Нажимая кнопку войти, Вы принимаете"
        android:textSize="10sp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:gravity="center_horizontal"
        android:textColor="@color/text_gray"
        />

    <TextView
        android:id="@+id/bottom_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bottom_text1"
        android:layout_marginBottom="24dp"
        android:text="условия программы лояльности"
        android:textSize="10sp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:gravity="center_horizontal"
        android:textColor="@color/text_gray"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="290dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cat_item_main">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/main_item_viewpager"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_catalog_slider_image"
        android:visibility="visible"
        />

    <ImageButton
        android:id="@+id/favourites_button_disactive"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="6dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_heart"
        />

    <ImageButton
        android:id="@+id/favourites_button_active"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="6dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_heart_pink"
        android:visibility="gone"
        />

    <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/main_item_viewpager"
        app:spi_dotSelectedSize="6dp"
        app:spi_dotColor="@color/background_light_gray"
        app:spi_dotSelectedColor="@color/background_pink"
        />
    <TextView
        android:id="@+id/old_price"
        app:layout_constraintTop_toBottomOf="@id/main_item_viewpager"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="749 Р"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textSize="9sp"
        android:textStyle="" />
    <TextView
        android:id="@+id/new_price"
        app:layout_constraintTop_toBottomOf="@id/old_price"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="749 Р"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textSize="14sp"
        android:textStyle="bold" />
    <View
        android:id="@+id/discount_label_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/new_price"
        app:layout_constraintBottom_toBottomOf="@id/new_price"
        app:layout_constraintStart_toEndOf="@id/new_price"
        app:layout_constraintEnd_toEndOf="@id/discount_label_space"
        android:layout_marginStart="8dp"
        android:background="@drawable/cat_item_discount_label"
        />
    <TextView
        android:id="@+id/discount_label_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/discount_label_view"
        app:layout_constraintTop_toTopOf="@id/discount_label_view"
        app:layout_constraintBottom_toBottomOf="@id/discount_label_view"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="6dp"
        tools:text="-35%"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textSize="9sp"
        />
    <Space
        android:id="@+id/discount_label_space"
        android:layout_width="6dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/discount_label_text"
        app:layout_constraintBottom_toBottomOf="@id/discount_label_text"
        app:layout_constraintStart_toEndOf="@id/discount_label_text"
        />
    <TextView
        android:id="@+id/title"
        app:layout_constraintTop_toBottomOf="@id/new_price"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ESFOLIO"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textSize="12sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/subtitle"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Лосьон для тела`ESFOLIO` COENZYME Q 10 500 мл"
        android:lines="3"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textSize="10sp"
        />
    <ImageView
        android:id="@+id/rating_image_dark"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@id/rating_score_dark"
        app:layout_constraintBottom_toBottomOf="@id/rating_score_dark"
        android:src="@drawable/ic_small_star"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/rating_score_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/rating_image_dark"
        android:text="0.0"
        android:textSize="9sp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/rating_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@id/rating_score"
        app:layout_constraintBottom_toBottomOf="@id/rating_score"
        android:src="@drawable/ic_icongold_star"
        />
    <TextView
        android:id="@+id/rating_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/rating_image"
        tools:text="4.5"
        android:textSize="9sp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textColor="#F9A249"
        />
    <TextView
        android:id="@+id/rating_feedback_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/rating_score"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="@id/rating_score"
        app:layout_constraintBottom_toBottomOf="@id/rating_score"
        android:textSize="9sp"
        android:textColor="@color/text_dark_gray"
        android:fontFamily="@font/sf_pro_display_regular"
        tools:text="(51)"
        />
    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_add_pink"
        />

</androidx.constraintlayout.widget.ConstraintLayout>